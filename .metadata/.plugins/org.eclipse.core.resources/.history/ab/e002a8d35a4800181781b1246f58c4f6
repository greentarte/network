package t2;

Runnable r1 = new Runnable() {
	int result = 1;
	boolean flag = true;

	public int getResult() {
		return this.result;
	}

	public void setFlag(boolean flag) {
		this.flag = flag;
	}

	@Override
	public void run() {
		while (flag) {
			result++;
			try {
				Thread.sleep(300);
			} catch (InterruptedException e) {
				e.printStackTrace();
			}
		}
	}
}



public class Main {


	public static void main(String[] args) {
		
		//쓰레드의 상태 값을 가져오는것
		
		
	}

}
