package t2;

public class Main {
	Runnable R1 = new Runnable() {
		int result = 1;
		boolean flag = true;

		public int getResult() {
			return this.result;
		}

		public void setFlag(boolean flag) {
			this.flag = flag;
		}

		@Override
		public void run() {
			while (flag) {
				result++;
				try {
					Thread.sleep(300);
				} catch (InterruptedException e) {
					e.printStackTrace();
				}
			}
		}
	};

	public static void main(String[] args) {
		R1 r1 = new R1();

	}

}
