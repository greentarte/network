package t3;

class Receiver implements Runnable {
	String cmd;

	public void setCmd(String cmd) {
		this.cmd = cmd;
	}

	@Override
	public void run() {
		while(true) {
			if(cmd.equals("s")) {
				// Send message
				for(int i=0; i<=30; i++) {
					System.out.println(i);
					try {
						Thread.sleep(300);
					} catch (InterruptedException e) {
						// TODO Auto-generated catch block
						e.printStackTrace();
					}
				}
				// send Message End....
			}
		}
	}

}

public class Main {

	public static void main(String[] args) {

	}

}
